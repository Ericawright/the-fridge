
<% @body_class = "search" %>

<div id="results">
  <%@display_result.each do |match|%>
    <div class="row matches">
      <div class="col-md-4 col-md-offset-2 left" id="results-left"><img class="image-results" width="300px"height="300px" src="<%=match.picture%>"> 
      </div>
      <div class="col-md-6 right" id="results-right">
        <a href="/showlocal/<%=match[:id]%>"><h3 class="recipe_name"><strong><em><%=match[:name]%></em></strong></h3></a>
        <li class="ingredients"><strong>Ingredients: </strong><%=match.ingred%></li>
        <div class="recipe-details"><br>
          <p class="time"><strong>Cooking time: </strong><%=match[:cook_time]/60%> minutes</p>
        </div>
      </div>
    </div>
  <%end%>
</div>


